{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "project": ["tsconfig.json"]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "array-bracket-spacing": ["warn", "always"],
  
      "arrow-parens": ["error", "always"],
  
      "@typescript-eslint/ban-ts-comment": "off",
  
      "ban-ts-ignore": "off",
  
      "callback-return": "off",
  
      "camelcase": "off",
  
      "comma-dangle": "off",
      "@typescript-eslint/comma-dangle": ["error", "never"],
  
      "comma-style": ["error", "last"],
  
      "comma-spacing": "off",
      "@typescript-eslint/comma-spacing": ["error", { "before": false, "after": true }],
  
      "eol-last": "error",
  
      "eqeqeq": "error",
  
      "indent": "off",
      "@typescript-eslint/indent": ["error", 2, {"VariableDeclarator": {"var": 2, "let": 2, "const": 3}, "SwitchCase": 1}],
  
      "keyword-spacing": "off",
      "@typescript-eslint/keyword-spacing": ["error"],
  
      "max-len": [1, 200],
  
      "no-comma-dangle": "off",
  
    //   "no-console": ["warn", { "allow": ["fatal", "error", "warn", "info", "debug", "trace"] }],
  
      "@typescript-eslint/no-explicit-any": "off",
  
      "no-labels": ["error"],
  
      "no-new-require": ["error"],
  
      "no-mixed-requires": ["off", {"grouping": false}],
  
      "no-multi-spaces": ["error"],
  
      "no-multiple-empty-lines": ["error"],
  
      "@typescript-eslint/no-non-null-assertion": "off",
  
      "no-return-assign": ["error"],
  
      "no-trailing-spaces": "error",
  
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
  
      "no-var": "off",
  
      "@typescript-eslint/no-var-requires": "off",
  
      "object-curly-spacing": ["error", "always"],
  
      "one-var": "off",
  
      "quote-props": ["error", "as-needed"],
  
      "quotes": "off",
      "@typescript-eslint/quotes": [2, "single", { "avoidEscape": true }],
  
      "require-jsdoc": "off",
  
      "semi": "off",
      "@typescript-eslint/semi": ["error", "always"],
  
      "space-before-blocks": "error",
  
      "space-before-function-paren": "off",
      "@typescript-eslint/space-before-function-paren": ["error", {"anonymous": "always", "named": "never"}],
  
      "spaced-comment": ["error", "always", {}],
  
      "valid-jsdoc": ["error"],
  
      "vars-on-top": ["error"]
    },
    "overrides": [
      {
        "files": [ "**/*.ts" ]
      }
    ]
  }
  